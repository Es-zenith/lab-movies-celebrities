{{!-- views/books/books-list.hbs --}}
<h1>CELEBRITIES</h1>

{{#each Celebrities}}
<div class="card">
    <h3>{{name}}</h3>
    <p>By: {{occupation}}</p> {{!-- additional book property --}}
    <a href="/books/{{_id}}">See details</a> {{!-- link that points to the details page --}}
    <a href="/books/{{_id}}/edit">Edit</a>
</div>
{{/each}}

<h2>Create a Celebrity</h2>

<form action="/books/create" method="post">
    <label> Name:
        <input type="text" name="title" />
    </label>

    <label> Occupation:
        <input type="text" name="author" />
    </label>

    <label> CatchPhrase:
        <textarea name="description" cols="30" rows="4"> </textarea>
    </label>

    <button type="submit"> Create </button>
</form>